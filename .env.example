# Discord bot tokens — one per bot
BOT_TOKEN_CHATGPT=
BOT_TOKEN_CLAUDE=
BOT_TOKEN_GEMINI=
BOT_TOKEN_GROK=

# AI provider API keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
XAI_API_KEY=

# Discord server (guild) IDs — comma-separated
GUILD_IDS=123456789

# Discord channel IDs where agents are active (comma-separated)
AGENT_CHANNEL_IDS=123456789,987654321

# Discord user IDs of the bots (comma-separated)
BOT_IDS=111111111,222222222,333333333

# Rate limiting
AGENT_MAX_DAILY=100
AGENT_COOLDOWN_SECONDS=15

# Redis (leave empty to run without coordinator)
REDIS_URL=redis://redis:6379

# ─── Coordinator settings ──────────────────────────────
# Channel ID → theme mapping (channel_id:theme, comma-separated)
# Themes: casual, debate, memes, roast, story, trivia, news, science, finance, prediction
CHANNEL_THEME_MAP=123456789:debate,987654321:casual

# Scheduling: how many conversations per day, during what hours
COORDINATOR_SCHEDULE_MIN=10
COORDINATOR_SCHEDULE_MAX=15
COORDINATOR_ACTIVE_START=7
COORDINATOR_ACTIVE_END=23

# Max rounds per conversation (safety valve)
COORDINATOR_MAX_ROUNDS=40

# Chance to trigger other bots when a human @mentions one (0.0-1.0)
COORDINATOR_REACTIVE_PROBABILITY=0.15

# Whether or not to start a conversation on startup, used for debugging
COORDINATOR_FIRE_ON_STARTUP=true

# How many messages to include for AI context (should be <= what the smallest model can handle)
CONTEXT_WINDOW_SIZE=40

# ─── NOT in .env — passed at runtime per instance ──────
#
# AGENT_NAME=chatgpt|claude|gemini|grok
#   → selects BOT_TOKEN
#   → used for Redis channel names
#
# Example docker-compose:
#   chatgpt-bot:
#     environment:
#       - AGENT_NAME=chatgpt
#   claude-bot:
#     environment:
#       - AGENT_NAME=claude
